<link rel='stylesheet' href='/styles/1.css' />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
<style>
    h1 {text-align: center;}
    </style>
<H1><%=title%></H1><br>
<form action="/next" method="post">
<div class="container mt-sm-5 my-1" >
    <div class="question ml-sm-5 pl-sm-5 pt-2">
        <div class="py-2 h5"><b> <%=sr_no%> of <%=total%></b></div><br>
        <div class="py-2 h5"><b>Q. <%=statement%>?</b></div>
        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options">
             <label class="options"><%=options[0]%> <input type="radio" name="response" value='a'> <span class="checkmark"></span> </label> 
             <label class="options"><%=options[1]%> <input type="radio" name="response" value='b'> <span class="checkmark"></span></label>
             <label class="options"><%=options[2]%> <input type="radio" name="response" value='c'> <span class="checkmark"></span> </label> 
             <label class="options"><%=options[3]%> <input type="radio" name="response" value='d'> <span class="checkmark"></span> </label> </div>
    </div>
    <input type="hidden" name="sr_no" value="<%=Number(sr_no)%>">
    <input type="hidden" name="answer" value="<%=answer%>">
    <input type="hidden" name="title" value="<%=title%>">
    <div class="d-flex align-items-center pt-3">
        <!--<div id="prev"> <button type="submit" formaction="/previous">Previous</button> </div>-->
        <div class="ml-auto mr-sm-5"> <input type="submit" value=Next> </div>
    </div>
</div>
</form>